---
import BaseLayout from "../layouts/BaseLayout.astro";

const siteTitle = "404 Not Found";
const description = "Page not found";

const BaseLayoutClassNames = {
  html: 'h-full',
  body: 'size-full',
  main: 'h-full',
};
---

<BaseLayout title={siteTitle} description={description} classNames={BaseLayoutClassNames}>
  <div class="flex h-full w-full items-center justify-center">
    <div class="flex flex-col gap-1 justify-center text-center text-6xl font-bold py-4">
      <div>404</div>
      <div class="text-xl font-light text-black">(Page Not Found)</div>
    </div>
  </div>
</BaseLayout>
