---
import BaseLayout from "../layouts/BaseLayout.astro";

const siteTitle = "404 Not Found";
const description = "Page not found";

const BaseLayoutClassNames = {
  html: "h-full",
  body: "size-full",
  main: "h-full",
};
---

<BaseLayout
  title={siteTitle}
  description={description}
  classNames={BaseLayoutClassNames}
>
  <div class="flex h-full w-full items-center justify-center">
    <div
      class="flex flex-col justify-center gap-1 py-4 text-center text-6xl font-bold"
    >
      <div>404</div>
      <div class="text-xl font-light">(Page Not Found)</div>
    </div>
  </div>
</BaseLayout>
