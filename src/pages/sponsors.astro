---
import "../style/global.css";
const siteTitle = "theo's sponsors";
const description = "all of the brands running ads on my youtube channel";

const sponsors = [
  {
    name: "appwrite",
    image: "https://svgl.app/library/appwrite.svg",
    description:
      "Build your entire backend within minutes and scale effortlessly. Add Authentication, Databases, Functions, Storage, and Messaging to your projects using the frameworks and languages of your choice",
    link: "https://appwrite.io/",
  },
  {
    name: "netlify",
    image: "https://svgl.app/library/netlify.svg",
    description:
      "Deploy any modern frontend stack, from marketing sites to AI apps. Join millions of developers and teams shipping faster on Netlify.",
    link: "https://www.netlify.com/",
  },
  {
    name: "prisma postgres",
    image: "https://svgl.app/library/prisma.svg",
    description:
      "Deploy a Postgres database in 3 clicks â€” free to start, no setup, no commitments. Easily grow your database as your app scales and only pay when you grow out of our generous free tier.",
    link: "https://www.prisma.io/postgres",
  },
  {
    name: "posthog",
    image: "https://svgl.app/library/posthog.svg",
    description:
      "The single platform to analyze, test, observe, and deploy new features",
    link: "https://posthog.com/",
  },
];
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" />
    <meta name="description" content={description} />
    <meta name="twitter:image" content="https://t3.gg/images/twitter.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@t3dotgg" />
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://t3.gg/images/twitter.png" />
    <title>{siteTitle}</title>
    <meta name="theme-color" content="#000000" />
  </head>
  <body class="h-screen bg-white text-black">
    <main>
      <header class="flex flex-col gap-2 px-8 pb-8 pt-8">
        <h1 class="text-4xl font-semibold">my sponsors</h1>
        <p>here's all the brands that have run ads on my content</p>
      </header>
      <ul class="divide-y divide-gray-200">
        {
          sponsors.map((brand) => (
            <li class="px-4 py-8 transition duration-300 ease-in-out first:pt-4 last:pb-4 hover:bg-gray-50 md:px-12">
              <div class="flex flex-col items-center gap-4 md:flex-row md:space-x-6">
                <div class="h-24 w-24 flex-shrink-0">
                  <img
                    src={brand.image || "/placeholder.svg"}
                    alt={brand.name}
                    width={96}
                    height={96}
                    class="h-full w-full object-contain"
                  />
                </div>
                <div class="m-0 flex-grow">
                  <h2 class="pb-2 text-2xl font-semibold text-gray-800">
                    {brand.name}
                  </h2>
                  <p class="pb-3 leading-relaxed text-gray-600">
                    {brand.description}
                  </p>
                  <a
                    href={brand.link}
                    class="inline-flex items-center text-sm text-purple-400 transition duration-300 ease-in-out hover:text-purple-600"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <span class="pr-2">learn more</span>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-4 w-4"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width={2}
                        d="M14 5l7 7m0 0l-7 7m7-7H3"
                      />
                    </svg>
                  </a>
                </div>
              </div>
            </li>
          ))
        }
      </ul>

      <div class="border-t border-gray-200 pb-24 pt-20 text-center">
        <h2 class="mb-6 text-2xl font-semibold text-gray-800">
          want to see the actual ads?
        </h2>
        <a
          href="https://www.youtube.com/@t3dotgg"
          class="inline-flex items-center justify-center rounded-md border border-gray-300 bg-white px-6 py-3 text-base font-medium text-gray-700 transition duration-300 ease-in-out hover:bg-gray-50"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            src="https://svgl.app/library/youtube.svg"
            alt="YouTube"
            width={20}
            height={20}
            class="h-5 w-5"
          />
          <span class="pl-2">my channel</span>
        </a>
      </div>
    </main>
  </body>
</html>
