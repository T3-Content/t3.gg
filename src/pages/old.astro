---
import BaseLayout from "../layouts/BaseLayout.astro";

const siteTitle = "Theo Browne - T3 Stack, Ping.gg, YouTuber";
const description =
  "Theo is known for a few things. Creator of the T3 Stack. CEO of Ping.gg. Alum of Twitch, Y Combinator and RPI. Your Favorite Dev's Favorite Youtuber.";

const BaseLayoutClassNames = {
  html: 'bg-[#e8dcfe]',
};
---

<BaseLayout title={siteTitle} description={description} classNames={BaseLayoutClassNames}>
  <div class="absolute right-0 z-10 p-4 text-right text-xl font-bold">
    <a class="text-black" href="https://www.youtube.com/@t3dotgg">Youtube</a>

    <br />
    <a class="text-black" href="https://x.com/theo">Twitter</a>
    <br />
    <a class="text-black" href="/blog">Blog</a>
  </div>
  <div class="flex flex-col items-center overflow-visible">
    <div
      class="animated-bg relative flex h-[40vh] w-full flex-col items-center justify-center px-4 pt-2 pb-16"
    >
      <img
        src={"/assets/t3-text-block.svg"}
        class="pointer-events-none z-10 h-full rounded-xl select-none"
        alt="T3 logo"
      />
      <div class="bg-blend absolute bottom-0 z-0 h-24 w-full"></div>
    </div>
    <div class="pt-2"></div>
    <div class="flex flex-col justify-center px-4">
      <h4 class="text-center text-2xl">Theo's Homepage</h4>

      <div class="py-4">If you're here, you're probably looking for...</div>
      <h4 class="text-theo-blue text-center text-xl">
        <a href="/links" rel="prefetch">Theo (CEO @ Ping Labs)</a>
      </h4>
      <div class="text-center text-xl font-bold">OR</div>
      <h4 class="text-theo-blue mb-2 text-center text-xl">
        <a href="https://ping.gg">Ping Labs (prev. T3 Tools)</a>
      </h4>
      <a
        href="https://ping.gg"
        class="ping-card flex flex-col items-center justify-center rounded-xl bg-black px-4 py-8 text-white hover:bg-black/90 hover:no-underline"
      >
        <img
          src={"/assets/ping/logo.svg"}
          class="w-36"
          alt="T3 logo"
          width={200}
        />
        <div class="pt-4"></div>
        <p class="text-center">The best way to stream with friends.</p>
      </a>
    </div>
  </div>
</BaseLayout>
