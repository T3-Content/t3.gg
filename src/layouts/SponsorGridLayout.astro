---
interface Props {
  sponsors: {
    name: string;
    link: string;
    image: string;
    description: string;
  }[];
}

const { sponsors } = Astro.props;
---

<div
  class="grid w-full max-w-[1200px] grid-cols-1 gap-4 py-4 md:grid-cols-2 lg:grid-cols-3"
>
  {
    sponsors.map((sponsor) => (
      <a
        href={sponsor.link}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-4 rounded-xl border border-gray-200 bg-background p-4 shadow-md transition-shadow hover:shadow-lg"
      >
        <img
          src={sponsor.image}
          alt={sponsor.name}
          class="h-16 w-16 flex-shrink-0 object-contain"
        />
        <div>
          <h3 class="text-lg font-semibold text-gray-800">
            {sponsor.name}
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            {sponsor.description}
          </p>
        </div>
      </a>
    ))
  }
</div>
